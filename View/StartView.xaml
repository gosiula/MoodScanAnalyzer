<UserControl x:Class="MoodScanAnalyzer.View.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoodScanAnalyzer.View"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d">
    <Grid>
        <Grid Background="#80000000"
              Visibility="Collapsed"
              Panel.ZIndex="100">
            <ProgressBar IsIndeterminate="True"
                         Width="120"
                         Height="20"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Foreground="BlueViolet"/>
        </Grid>

        <StackPanel Width="500"
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="0,10,0,0">
            <Image Source="/Images/logo.png"
                   Width="90" Height="90"/>

            <TextBlock Text="MoodScanAnalyzer"
                       Foreground="White"
                       FontSize="25"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Witaj w&#x00A0;aplikacji MoodScanAnalyzer!"
                       Foreground="LightGray"
                       FontSize="16"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,60,0,50"/>

            <TextBlock Text="Program został stworzony po&#x00A0;to,&#x00A0;aby analizować wyniki badań użytkowników oglądających wideo."
                       Foreground="LightGray"
                       FontSize="11"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       TextWrapping="Wrap"
                       TextAlignment="Justify"
                       Margin="0,10,0,0"/>

            <TextBlock Text="Kliknij przycisk poniżej, aby rozpocząć!"
                       Foreground="LightGray"
                       FontSize="12"
                       FontWeight="Medium"
                       FontFamily="Montserrat"
                       TextWrapping="Wrap"
                       TextAlignment="Justify"
                       Margin="0,30,0,40"/>

            <Button Style="{StaticResource startButton}" 
                    Tag="{StaticResource color5}" 
                    Grid.Column="1"
                    Margin="0,30,0,30"
                    Command="{Binding StartCommand}">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="START" 
                               Style="{StaticResource startButtonText}" 
                               Margin="0,0,10,0"/>
                    <fa:ImageAwesome Icon="ArrowRight" 
                                     Width="14" 
                                     Height="14" 
                                     Foreground="White"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <TextBlock Grid.Row="2"
                   Text="Małgorzata Skowron    |    PWR 2025"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   FontWeight="Light"
                   FontSize="10"
                   FontFamily="Montserrat"
                   Margin="30,10,0,30"
                   Foreground="{StaticResource color5}" >
        </TextBlock>
    </Grid>
</UserControl>
