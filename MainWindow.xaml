<Window x:Class="MoodScanAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mdi="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:MoodScanAnalyzer"
        mc:Ignorable="d"
        xmlns:viewModel="clr-namespace:MoodScanAnalyzer.ViewModel"
        Icon="/Images/icon.ico"
        Title="MoodScanAnalyzer" Height="600" Width="1200"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="16">
        <Border.Background>
            <ImageBrush ImageSource="Images/background.png"
                        Stretch="UniformToFill"/>
        </Border.Background>
        <Border x:Name="MainBorder"
                CornerRadius="10"
                BorderThickness="3">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" 
                                     EndPoint="1,1"
                                     GradientStops="{StaticResource BorderStops}"
                                     MappingMode="RelativeToBoundingBox"/>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0"
                                     GradientStops="{StaticResource BackgroundStops}"
                                     Opacity="0.95"/>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Background="{StaticResource color8}" 
                        CornerRadius="10,10,0,0">
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <Button Style="{StaticResource controlButton}" 
                                Tag="{StaticResource color1}" 
                                Grid.Column="1"
                                Click="BtnMinimize_Click">
                            <fa:ImageAwesome Icon="WindowMinimize" 
                                             Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <Button Style="{StaticResource controlButton}" 
                                Tag="{StaticResource color2}" 
                                Grid.Column="2"
                                Click="BtnFullScreen_Click">
                            <fa:ImageAwesome Icon="WindowMaximize" 
                                             Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <Button Style="{StaticResource controlButton}" 
                                Tag="{StaticResource color3}" 
                                Grid.Column="3"
                                Click="BtnClose_Click">
                            <fa:ImageAwesome Icon="Close" 
                                             Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="{Binding IsScrollEnabled, Converter={StaticResource BoolToScrollBarConverter}}">
                        <Grid>
                            <ContentControl x:Name="MainContentControl" 
                                            Content="{Binding CurrentChildView}" 
                                            Grid.Column="1"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
