<Application x:Class="MoodScanAnalyzer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MoodScanAnalyzer"
             xmlns:converters="clr-namespace:MoodScanAnalyzer.Converters"
             xmlns:viewModel="clr-namespace:MoodScanAnalyzer.ViewModel"
             xmlns:view="clr-namespace:MoodScanAnalyzer.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="Montserrat"/>
            </Style>

            <Style TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="Montserrat"/>
            </Style>

            <Style TargetType="{x:Type Button}">
                <Setter Property="FontFamily" Value="Montserrat"/>
            </Style>

            <Style TargetType="{x:Type ComboBox}">
                <Setter Property="FontFamily" Value="Montserrat"/>
            </Style>

            <converters:BoolToScrollBarConverter x:Key="BoolToScrollBarConverter"/>
            <converters:PlayPauseConverter x:Key="PlayPauseConverter"/>

            <DataTemplate DataType="{x:Type viewModel:StartViewModel}">
                <view:StartView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:VideoChartViewModel}">
                <view:VideoChartView/>
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/UIColors.xaml"/>
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Styles/MultiSelectStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
